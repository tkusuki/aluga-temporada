<%= link_to 'Cadastrar um imóvel', new_property_path %>
<hr>
<% if @properties.empty? %>
  <div>
    Nenhum imóvel encontrado
  </div>
  <% else %>
    <% @properties.each do |property| %>
      <div>
        <h1><%= link_to property.title, property_path(property) %></h1>
        <h3><%= property.main_photo %></h3>
        <p>Preço da diária: R$ <%= property.daily_rate %></p>
        <p>Acomoda até: <%= property.maximum_guests %> pessoas</p>
        <p>Localização: <%= property.property_location %></p>
      </div>
    <% end %>
<% end %>
